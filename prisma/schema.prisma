datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  OWNER
  USER
}

enum ParkingLotStatus {
  OPEN
  CLOSED
}

enum ParkingLotAvailability {
  MORE_THAN_FIVE
  LESS_THAN_FIVE
  NO_AVAILABILITY
}

enum GlobalStatus {
  ACTIVE
  INACTIVE
  DELETED
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  role        UserRole
  status      GlobalStatus @default(ACTIVE)
  parkingLots ParkingLot[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ParkingLot {
  id           String                 @id @default(uuid())
  code         String                 @unique
  name         String
  address      String
  latitude     Float
  longitude    Float
  status       ParkingLotStatus
  availability ParkingLotAvailability
  globalStatus GlobalStatus           @default(ACTIVE)
  histories    ParkingLotHistory[]
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
  owner        User?                  @relation(fields: [ownerId], references: [id])
  ownerId      String?
}

model ParkingLotHistory {
  id           String                 @id @default(uuid())
  parkingLot   ParkingLot             @relation(fields: [parkingLotId], references: [id])
  parkingLotId String
  status       ParkingLotStatus
  availability ParkingLotAvailability
  updatedAt    DateTime               @default(now())
}
